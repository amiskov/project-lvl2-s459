{
    "name": "amiskov/gendiff",
    "description": "Shows difference between files. Hexlet 2nd level project.",
    "require": {
        "docopt/docopt": "^1.0",
        "funct/funct": "^1.5",
        "ext-json": "*"
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "phpunit": "phpunit",
        "test": "phpunit tests"
    },
    "authors": [
        {
            "name": "Andrey Miskov",
            "email": "amiskov@gmail.com"
        }
    ],
    "bin": [
        "bin/gendiff"
    ],
    "autoload": {
        "psr-4": {
            "Differ\\Tests\\": "tests/"
        },
        "files": [
            "src/Differ.php",
            "src/Cli.php"
        ]
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.4",
        "phpunit/phpunit": "^8.2@dev",
        "symfony/var-dumper": "^4.2"
    }
}
